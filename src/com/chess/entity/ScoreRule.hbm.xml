<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.chess.entity">

	<class name="ScoreRule" table="chess_score_rule">
		<id name="id" type="long" column="chess_id">
			<generator class="native" />
		</id>
		
		<property name="winningScore" type="double" length="8" column="chess_winning_score"/>	
		<property name="losingScore" type="double" length="8" column="chess_losing_score"/>		
		<property name="drawScore" type="double" length="8" column="chess_draw_score"/>
		<property name="state" type="string" length="20" column="chess_state"/>
		
	</class>

</hibernate-mapping>

